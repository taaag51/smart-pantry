{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "types": [
            "cypress",
            "node"
        ], // CypressとNodeの型定義を追加
        "baseUrl": "./",
        "paths": {
            "@/*": [
                "src/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "cypress/**/*.ts" // Cypressのテストファイルを含める
    ],
    "exclude": [
        "node_modules"
    ]
}